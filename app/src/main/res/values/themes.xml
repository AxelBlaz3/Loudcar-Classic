<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoudcarClassic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_400</item>
        <item name="colorSecondaryVariant">@color/purple_400</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Type. -->
        <item name="textAppearanceHeadline5">@style/TextAppearance.Loudcar.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Loudcar.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Loudcar.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Loudcar.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Loudcar.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Loudcar.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Loudcar.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Loudcar.Overline</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Loudcar.Caption</item>

        <!-- Shape. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Loudcar.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Loudcar.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Loudcar.LargeComponent</item>
    </style>

    <style name="Theme.LoudcarClassic.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_illustration</item>
    </style>
</resources>